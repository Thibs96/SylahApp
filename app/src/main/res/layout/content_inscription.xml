<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text_nom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:layout_weight="50"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:text="Nom" />

        <EditText
            android:id="@+id/saisis_Nom"
            android:layout_width="398dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textStyle="italic"
            android:ems="10"
            android:gravity="left"
            android:hint="Nom" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text_pseudo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/saisis_pseudo"
            android:layout_width="398dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:ems="10"
            android:gravity="left"
            android:hint="Pseudo"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_marginTop="75dp"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:text="Mot de passe"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/saisis_pass"
            android:layout_width="398dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textStyle="italic"
            android:ems="10"
            android:gravity="left"
            android:inputType="textPassword"
            android:hint="Mot de passe" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="75dp"
        android:id="@+id/linearLayout4"
        android:layout_alignTop="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/text_confirmpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_weight="50"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:text="Verif MDP"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/saisis_confirmpass"
            android:layout_width="398dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:textStyle="italic"
            android:ems="10"
            android:gravity="left"
            android:inputType="textPassword"
            android:hint="Mot de passe" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout6"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmation"
            android:id="@+id/button_confirm"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/linearLayout5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="left"
            android:layout_weight="50"
            android:background="#BAFE86"/>

        <Button
            android:id="@+id/btnviewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button_confirm"
            android:layout_gravity="right"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:layout_weight="50"
            android:onClick="OnClick"
            android:text="Annuler" />


    </LinearLayout>



</RelativeLayout>


